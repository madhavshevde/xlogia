@using Xlogia.Domain.Entities;
@model IEnumerable<Employee>
@{
	ViewBag.Title = "List";
}

<div class="panel panel-default">
	<div class="panel-heading">
		<h3>All Employees</h3>
	</div>
	<div class="panel-body">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>@Html.DisplayNameFor(model => model.Name)</th>
					<th>@Html.DisplayNameFor(model => model.Email)</th>
					<th class="text-right">@Html.DisplayNameFor(model => model.Age)</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var e in Model)
				{
					<tr>
						<td>@e.Name</td>
						<td>@e.Email</td>
						<td class="text-right">@e.Age</td>
						<td class="column-width-50">@Html.ActionLink("Edit", "Edit", new { e.ID }, new { @class = "btn btn-default" })</td>
						<td>
							@using (Html.BeginForm("Delete", "Employee"))
							{
								@Html.Hidden("ID", e.ID)
								<input type="submit"
									   class="btn btn-default"
									   value="Delete" />
							}
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="panel-footer">
		@Html.ActionLink("Add a new Employee", "Create", null,
		new { @class = "btn btn-default" })
	</div>
</div>
